{
  "name": "@pendle/constants",
  "author": "Pendle Labs",
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint src",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "postinstall": "install-peers",
    "format": "yarn prettier --write **/*.{js,ts}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/pendle-constants.esm.js",
  "size-limit": [
    {
      "path": "dist/pendle-constants.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/pendle-constants.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "husky": "^7.0.4",
    "install-peers-cli": "^2.2.0",
    "size-limit": "^7.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "ethers": "^5.5.1",
    "web3": "^1.6.1"
  }
}
